<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<TextView
    android:id="@+id/hotel_name_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hotel Name"
    android:textSize="24sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="32dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"/>

<TextView
    android:id="@+id/hotel_price_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hotel Price"
    android:textSize="18sp"
    app:layout_constraintTop_toBottomOf="@id/hotel_name_text_view"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"/>

<TextView
    android:id="@+id/hotel_availability_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Availability"
    android:textSize="18sp"
    app:layout_constraintTop_toBottomOf="@id/hotel_price_text_view"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"/>

<!-- LinearLayout for dynamic views -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/hotel_availability_text_view"
    app:layout_constraintBottom_toTopOf="@id/submit_button"
    android:layout_marginTop="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Dynamic views will be added here programmatically -->
    </LinearLayout>

</ScrollView>

<!-- Submit button -->
<Button
    android:id="@+id/submit_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:layout_margin="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:onClick="onSubmitClicked"/>

</androidx.constraintlayout.widget.ConstraintLayout>
